	<div id="join" class="span5">
		<h2>Join A Team</h2>
		<%= form_for(@team, :url => { :action => :join }, :method => :get) do |f| %>
		<%= f.label :id %>:
		<%= f.select(:id, options_from_collection_for_select(@teams, :id, :name)) %></br>
		<%= f.label :password %>:
		<%= f.text_field :password %><br />
		<%= f.submit "Join a Team"%>
		<% end %>
	
	</div>
	
	<div id="create" class="span5">
		<h2>Create A Team</h2>
		<%= form_for @team  do |f| %>
		  <%= f.label :name %>:
		  <%= f.text_field :name %><br />
		  <%= f.label :password %>:
		  <%= f.text_field :password %><br />
		  <%= f.submit %>
		<% end %>
	</div>
